@model ShriVivah.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdminSPMO.cshtml";
}
@Scripts.Render("~/bundles/UserProfile")
<h2>Change Password</h2>
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmEditUserProfile" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(m => m.UserId)
        <input type="hidden" id="ActiveUserId" value="@ViewBag.UserId" />
        @Html.ValidationSummary(true)
        <div class="form-group" id="contentdiv">
            <div id="divPersonal">
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Old Password</label>
                    <div class="col-sm-8">
                        <input type="password" id="txtOldPassword" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">New Password</label>
                    <div class="col-sm-8">
                        <input type="password" id="txtNewPassword" class="form-control1" />
                    </div>
                </div>
            </div>
            <div class="span_3">
                <input type="button" value="Submit" class="btn btn-default" id="btnChangePassword" />
                <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
            </div>
        </div>
    </div>
}

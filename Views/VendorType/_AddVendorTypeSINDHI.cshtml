@model ShriVivah.Models.VendorTypeModel
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmVendorType" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <h4>Vendor Type :</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.VendorTypeId)
            <div class="form-group">
                <label for="radio" class="col-sm-2 control-label">Vendor Type :</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.VendorType,new { @class= "form-control1 inputborder" })
                </div>
            </div>
            <div class="form-group">
                <label for="radio" class="col-sm-2 control-label">Logo Image :</label>
                <div class="col-sm-8">
                    @*<input type="file" id="BrandImage" class="form-control1" />
                    
                    <input type="button" value="Upload" class="btn btn-default" onclick="Upload('LP')" />*@
                    <button id="upload" class="btn btn-primary" type="button">Upload a File!</button>
                    <input type="hidden" id="logoImagehidden" />
                    <input id="BrandImage" type="file" style="display:none"/>
                </div>
            </div>
            <br />
            <div class="span_3">
                <input type="button" value="Save" class="btn btn-default" id="btnSave" />
                <input type="button" value="Update" class="btn btn-default" id="btnUpdate" />
                <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
            </div>
        </div>
     </div>
     
     <script type="text/javascript">
         $(document).ready(function () {
             $("#upload").click(function () {
                 files = $("#BrandImage").get(0).files;
                 if (files.length==0) {
                     $("#BrandImage").trigger("click");
                 }
                 else {
                     Upload("LP");
                 }
             })
             $("#BrandImage").change(function () {
                 $("#upload").trigger("click");
             });
         })
     </script>
}

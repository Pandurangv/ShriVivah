@{
    ViewBag.Title = "NewUISPMO";
    Layout = "~/Views/Shared/_LayoutSPMO.cshtml";
}

<div class="banner">
    <div class="container">
        <div class="banner_info">
            <h3 style="font-size:100px;">Coming Soon</h3></br>
        </div>
    </div>
    
</div> 

<div class="grid_2" data-ng-app="VarmalaVivahApp" data-ng-controller="VendorTypesController">
    <div class="container">
        <h2>Success Stories</h2>
        <div class="heart-divider">
            <span class="grey-line"></span>
            <i class="fa fa-heart pink-heart"></i>
            <i class="fa fa-heart grey-heart"></i>
            <span class="grey-line"></span>
        </div>
        <div class="row_1">
            <div class="col-md-8 suceess_story">
                <ul>
                    <li data-ng-repeat="ss in SuccessStories">
                        <div class="suceess_story-date">
                            <span class="entry-1">Dec 20, 2015</span>
                        </div>
                        <div class="suceess_story-content-container">
                            <figure class="suceess_story-content-featured-image">
                                <img width="150" height="200" style="max-height:150px;max-width:200px" data-ng-src="{{ss.Img1}}" class="img-responsive" alt="" />
                            </figure>
                            <div class="suceess_story-content-info">
                                <h4><a href="#">{{ss.FirstName}} {{ss.LName}}</a></h4>
                                <p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form,.<a href="#">More...</a></p>
                            </div>
                        </div>
                    </li>
                    
                </ul>
            </div>
            <div class="col-md-4 row_1-right">
                <h3>News & Events</h3>
                <div class="box_1" data-ng-repeat="event in EventList">
                    <figure class="thumbnail1"><img width="170" height="155" data-ng-src="{{event.EventImage}}" class="img-responsive" alt="" /></figure>
                    <div class="extra-wrap">
                        <div class="post-meta">
                            <span class="day">
                                <time>{{event.EventDate | mydate | date: 'dd' }}</time>
                            </span>
                            <span class="month">
                                <time>{{event.EventDate | mydate | date: 'MMM' }}</time>
                            </span>
                        </div>
                        <h4 class="post-title"><a href="#">{{event.EventName}}</a></h4>
                        <div class="clearfix"> </div>
                        <a href="#" class="vertical" data-toggle="modal" data-target="#myModal" id="btnzoom">Zoom</a>
                        <div id="myModal" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <img width="500" height="500" data-ng-src="{{event.EventImage}}" class="img-responsive" alt="" />
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                
                
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

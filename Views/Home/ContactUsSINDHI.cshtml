<div class="about_middle">
    <div class="container" data-ng-app="VarmalaVivahApp" data-ng-controller="VendorTypesController">
        <h2>Contact Form</h2>
        <form id="contact-form" class="contact-form">
            <fieldset>
                <div class="col-md-12">
                    <input type="text" class="form-control" placeholder="Name" id="Name" data-ng-blur="ValidateName()" maxlength="60">
                    <span style="color:#fff" data-ng-show="ErrorModel.IsName">
                        {{ErrorMessage}}
                    </span>
                </div>
                <div class="col-md-12">
                    <input type="number" class="form-control" placeholder="Mobile. No." style="margin-bottom:5px" id="txtMobileNo" maxlength="10" data-ng-blur="ValidateMobileNo()">
                    <span style="color:#fff" data-ng-show="ErrorModel.IsMobileNo">
                        {{ErrorMessage}}
                    </span>
                </div>
                <div class="col-md-12">
                    <input type="text" class="form-control" placeholder="Email" id="useremail" data-ng-blur="ValidateEmail()"
                                   maxlength="80">
                    <span style="color:#fff" data-ng-show="ErrorModel.IsEmail">
                        {{ErrorMessage}}
                    </span>
                </div>
                <div class="col-md-12">
                    <textarea placeholder="Message" id="usermessage" data-ng-blur="ValidateUserMessage()"></textarea>
                    <span style="color:#fff" data-ng-show="ErrorModel.IsUserMsg">
                        {{ErrorMessage}}
                    </span>
                </div>

                <button type="button" class="btn btn-danger" data-ng-click="SaveContacts()">Submit</button>
            </fieldset>
        </form>
    </div>
</div>

@model ShriVivah.Models.Entities.tblState

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmState" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(m=>m.StateId)
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-6">
                <span>Country Name</span>
                @Html.DropDownList("CountryId", ViewBag.CountryId as SelectList, new { @class = "form-control inputborder" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6" id="errorCName" style="display:none">
                <div class="form-group">
                    <span class="has-error" style="color: #c32143;">Please fill Country name.</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <span>State Name</span>
                @Html.TextBoxFor(model => model.StateName, new { @class = "form-control inputborder",@maxlength="20" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6" id="errorName" style="display:none">
                <div class="form-group">
                    <span class="has-error" style="color: #c32143;">Please fill State name.</span>
                </div>
            </div>
        </div>
        
        <br />
        <div class="span_3">
            <input type="button" value="Save" class="btn btn-default" id="btnSave" />
            <input type="button" value="Update" class="btn btn-default" id="btnUpdate" />
            <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
        </div>
    </div>
}

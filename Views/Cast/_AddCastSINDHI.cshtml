@model ShriVivah.Models.Entities.tblCast

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmCast" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m=>m.CastId)
        <div class="form-group">
            <div class="col-md-6">
                <span>Religion Name</span>
                @Html.DropDownList("ReligionId", ViewBag.ReligionId as SelectList, new { @class = "form-control inputborder" })
            </div>
        </div>
        <div class="form-group" id="errorCName" style="display:none">
            <div class="col-md-6">
                <span>Religion Name Should be selected</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <span>Cast Name</span>
                @Html.TextBoxFor(model => model.CastName, new { @class = "form-control inputborder", @maxlength = "15" })
                @Html.ValidationMessageFor(model => model.CastName)
            </div>
        </div>
        <div class="form-group" id="errorName" style="display:none">
            <div class="col-md-6">
                <span>Cast Name Should be filled</span>
            </div>
        </div>
        <br />
        <div class="span_3">
            <input type="button" value="Save" class="btn btn-default" id="btnSave" />
            <input type="button" value="Update" class="btn btn-default" id="btnUpdate" />
            <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
        </div>
    </div>
}

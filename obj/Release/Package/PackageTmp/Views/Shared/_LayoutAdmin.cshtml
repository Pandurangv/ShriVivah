<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>वरमाला विवाह</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/commoncss")
    @Scripts.Render("~/bundles/Main")
    @Scripts.Render("~/bundles/common")
    
</head>
<body data-ng-app="VarmalaVivahApp" data-ng-controller="VendorTypesController" id="contentdivbody" >
    <input type="hidden" id="loginStatus" value="@ViewBag.IsLogin" />
    <input type="hidden" id="hdnVendorType" value="@ViewBag.VendorTypes" />
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/images/logo_v1.png")" alt="वरमाला विवाह" style="max-height:60px;"/></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active" id="lihome"><a href="@Url.Action("Index","Home")">होम</a></li>
                    <li id="lireg">
                        <a  href="@Url.Action("Register","Account")">नोंदणी</a>
                    </li>
                    <li id="liSearch">
                        <a href="@Url.Action("Search", "Home")">शोध</a>
                    </li>
                    <li id="liSearch">
                        <a href="@Url.Action("Married", "Home")">विवाहित</a>
                    </li>
                    <li class="dropdown" id="liOther">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">लगीनघाई <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li data-ng-repeat="vendortype in VendorTypes" class="dropdownanchor">
                                <a href="@Url.Action("Vendors","Vendor")" class="dropdownanchor">{{vendortype.VendorType}}</a>
                                <hr class="nomargin1" />
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li id="licontact"><a href="@Url.Action("Contact","Home")"><span class="glyphicon glyphicon-earphone"></span>  संपर्क</a></li>
                    <li id="lnklogin" data-toggle="modal" data-target="#myModal"><a href="#"><span class="glyphicon glyphicon-log-in"></span> लॉग-इन</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="" contenteditable="false"></li>
            <li data-target="#myCarousel" data-slide-to="1" class="active" contenteditable="false"></li>
            <li data-target="#myCarousel" data-slide-to="2" class="" contenteditable="false"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item" style="">
                <img src="@Url.Content("~/Content/images/pic2.jpg")" alt="" class="">
                <div class="carousel-caption">
                    <h3 class="h4color">शोध तुमच्या जोडीदाराचा.</h3>
                </div>
            </div>
            <div class="item" style="">
                <img src="@Url.Content("~/Content/images/ganesh3.jpg")" alt="" class="">
                <div class="carousel-caption">
                    <h3 class="h4color">शोध तुमच्या जोडीदाराचा.</h3>
                </div>
            </div>
            <div class="item active">
                <img src="@Url.Content("~/Content/images/pic4.jpg")" alt="" class="">
                <div class="carousel-caption">
                    <h3 class="h4color">शोध तुमच्या जोडीदाराचा.</h3>
                </div>
            </div>
            
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>

        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>


    </div>
    
    <div class="container text-center" id="contentdiv">
        @RenderBody()
    </div>
    <div class="mainLoader" id="rclLoader" style="display: none;">
        <div class="mainLoaderImg"></div>
        <div class="lyfBg"></div>
    </div>
    <footer class="container-fluid text-center">
        <div class="col-md-4">
            <div class="f-mov-list">
                <h4 class="h3color">महत्वाच्या नोंदी</h4>
                <ul class="footerli">
                    <li><a class="h3color h3back" href="@Url.Action("Index","Home")">होम</a></li>
                    <li><a class="h3color h3back" href="@Url.Action("Contact","Home")">संपर्क</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="f-mov-list">
                <ul class="footerli">
                    <li><a class="h3color h3back" href="@Url.Action("Search", "Home")">शोध</a></li>
                    <li><a class="h3color h3back" href="@Url.Action("Register","Account")">नोंदणी</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="f-mov-list">
                <ul class="footerli">
                    <li><a class="h3color h3back" href="@Url.Action("Terms","Home")">नियम व अटी</a></li>
                    <li><a class="h3color h3back" href="@Url.Action("PrivacyPolicy","Home")">गोपनीयता धोरण</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
    </footer>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title h3color h3back1">लॉग-इन</h4>
                </div>
                <div class="modal-body">
                    <ng-form name="frmLogin" novalidate>
                        <div id="divLogin">
                            <div>
                                <input type="text" class="form-control" name="UserName" required data-ng-model="LoginModel.UserName" placeholder="लॉग-इन नाव"
                                       data-ng-class="{'borderred':frmLogin.UserName.$dirty && frmLogin.UserName.$error.required}" />
                                @*<span ng-show="" style="color:red;font-weight:600;">*</span>*@
                            </div>
                            <br />
                            <div>
                                <input type="password" class="form-control" name="Password" required data-ng-model="LoginModel.Password"
                                       placeholder="पासवर्ड" data-ng-class="{'borderred':frmLogin.Password.$dirty && frmLogin.Password.$error.required}" my-enter="ValidateAndLogin()"  />
                                @*<span ng-show="frmLogin.Password.$dirty && frmLogin.Password.$error.required" style="color:red;font-weight:600;">*</span>*@
                            </div>
                            <hr />
                            <button type="button" class="btn btn-primary btn-sm" data-ng-disabled="frmLogin.$invalid==true" id="btnLogin" data-ng-click="ValidateAndLogin()">लॉग-इन</button>
                            <br />
                            <a class="h3color h3back1" data-ng-click="lnkForgotPasswordClick()">पासवर्ड विसरलात</a>
                            
                        </div>
                       <div id="forGotPassword" style="display:none">
                           <div>
                               <input type="text" class="form-control" id="UserLoginId" placeholder="लॉग-इन नाव" />
                               @*<span ng-show="" style="color:red;font-weight:600;">*</span>*@
                           </div>
                           <br />
                           <button type="button" class="btn btn-primary btn-sm" id="btnForgot" data-ng-click="ForgotPassword()">दाखल करा</button>
                           <br />
                           <a class="h3color h3back1" data-ng-click="lnkLoginClick()">लॉग-इन करा</a>
                       </div>
                        <br />
                        <a class="h3color h3back1" href="@Url.Action("Register","Account")">नवीन उमेदवार?</a>
                    </ng-form>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $('#myCarousel').carousel();
        var winWidth = $(window).innerWidth();
        $(window).resize(function () {

            if ($(window).innerWidth() < winWidth) {
                $('.carousel-inner>.item>img').css({
                    'min-width': winWidth, 'width': winWidth
                });
            }
            else {
                winWidth = $(window).innerWidth();
                $('.carousel-inner>.item>img').css({
                    'min-width': '', 'width': ''
                });
            }
        });
    </script>
    @Scripts.Render("~/Scripts/Main/VendorTypesController.js")
</body>
</html>



@model ShriVivah.Models.Entities.STP_GetUserDetail
@{
    Layout = "~/Views/Shared/_LayoutAdminSPMO.cshtml";
}

@Scripts.Render("~/bundles/UserProfile")
<script type="text/javascript">
    $(document).ready(function () {
        var lstRelative = JSON.parse($("#relativeinfo").val());
        var uniqueNames = [];
        for (i = 0; i < lstRelative.length; i++) {
            if (uniqueNames.indexOf(lstRelative[i].Relation) === -1) {
                uniqueNames.push(lstRelative[i].Relation);
            }
        }
        var html = "";
        for (var i = 0; i < uniqueNames.length; i++) {
            html += "<li><h4>" + uniqueNames[i] + "</h4></li>";
            for (var j = 0; j < lstRelative.length; j++) {
                if (uniqueNames[i]==lstRelative[j].Relation) {
                    html += "<li style='height:40px'><div class='text-success pull-right'>Mr. " + lstRelative[j].RelativeName + "</div></li>";
                    html += "<li style='height:40px'><div class='text-success pull-right'>" + lstRelative[j].RelativeAddress + "</div></li>";
                }
            }
        }
        $("#divrelative").html("");
        $("#divrelative").html(html);

    })
    function Rotate()
    {
        var currunt = parseInt($("#Img1").attr("data"));
        if (currunt==360) {
            currunt = 0;
        }
        currunt=currunt+90;
        $("#Img1").css({
            "-webkit-transform": "rotate(" + currunt + "deg)",
            "-moz-transform": "rotate(" + currunt + "deg)",
            "transform": "rotate(" + currunt + "deg)" /* For modern browsers(CSS3)  */
        });
        $("#profileImage").css({
            "-webkit-transform": "rotate(" + currunt + "deg)",
            "-moz-transform": "rotate(" + currunt + "deg)",
            "transform": "rotate(" + currunt + "deg)" /* For modern browsers(CSS3)  */
        });
        $("#Img1").attr("data", currunt);
        $("#profileImage").attr("data", currunt);
    }
</script>
@Scripts.Render("~/Scripts/HelperJs/UserProfileHelper.js")
<h2>Bride/Groom Information</h2>
<div class="widget_4">
    <div class="col-md-12 widget_1_box1">
        <div class="coffee">
            <div class="coffee-top">
                <a href="#">
                    @if (!string.IsNullOrEmpty(Model.Img1))
                    {
                        <img class="img-responsive profilepicture showprofile" src="@Url.Content(String.Format("~/{0}", Model.Img1))" alt="" id="btnShowPopup" data="0">
                    }
                    else
                    {
                        if (Model.Gender == "M")
                        {
                            <img class="media-object profilepicture showprofile" src="@Url.Content("~/Content/Images/User_male.png")" data-holder-rendered="true" style="width: 150px; height: 150px;">
                        }
                        else
                        {
                            <img class="media-object profilepicture showprofile" src="@Url.Content("~/Content/Images/User_female.png")" data-holder-rendered="true" style="width: 150px; height: 150px;">
                        }
                    }
                </a>
                <button type="button" class="glyphicon glyphicon-refresh" onclick="Rotate()"></button>
                @if (ViewBag.IsAdmin)
                {
                    <input type="file" id="fileprofileImage" class="form-control1" required="required" />
                    <button type="button" class="btn btn-default" onclick="Upload(@Model.UserId)">Upload</button>

                }
            </div>
        </div>
    </div>
    <div class="col-md-12 noPadding">
        <div class="follow">
            <div class="col-xs-6 two religiondiv">
                <span>@Model.ReligionName</span>-
                <span>@Model.CastName</span>
            </div>
            <div class="clearfix"> </div>
            <button type="button" class="btn btn-default" onclick="SendMessage(@Model.UserId)">Send SMS</button>
            <button type="button" class="btn btn-default" onclick="window.location='@Url.Action("Index", "UserProfile")'">Search</button>
            @if (ViewBag.IsAdmin)
            {
                if (@Model.IsActive.Value == true)
                {
                    <button type="button" class="btn btn-default" onclick="ApproveUser(@Model.UserId,false)">Inactive</button>
                }
                else
                {
                    <button type="button" class="btn btn-default" onclick="ApproveUser(@Model.UserId,true)">Active</button>
                }
                <button type="button" class="btn btn-default" onclick="RemoveUser(@Model.UserId)">Remove</button>
                <button type="button" class="btn btn-default" onclick="EditUser(@Model.UserId)">Change Information</button>
            }
        </div>

    </div>
    <div class="col-md-4 stats-info stats-info1">
        <div class="panel-heading">
            <h4 class="panel-title">Personal Information</h4>
        </div>
        <div class="panel-body panel-body2">
            <ul class="list-unstyled">
                @if (!string.IsNullOrEmpty(Model.Gender))
                {
                    if (Model.Gender == "M")
                    {
                        <li>Name<div class="text-success pull-right"><h4>Mr. @Model.FirstName @Model.LName</h4></div></li>
                    }
                    else
                    {
                        <li>Name<div class="text-success pull-right"><h4>Miss. @Model.FirstName @Model.LName</h4></div></li>
                    }
                }
                else
                {
                    <li>Name<div class="text-success pull-right"><h4>@Model.FirstName @Model.LName</h4></div></li>
                }
                @switch (Model.MarritalStatus)
                {
                    case 1:
                        <li>Marrital Status<div class="text-success pull-right"><h4>Unmarried</h4></div></li>
                        break;
                    case 2:
                        <li>Marrital Status<div class="text-success pull-right"><h4>Widow</h4></div></li>
                        break;
                    case 3:
                        <li>Marrital Status<div class="text-success pull-right"><h4>Divorcee</h4></div></li>
                        break;
                    case 4:
                        <li>Marrital Status<div class="text-success pull-right"><h4>Separated</h4></div></li>
                        break;
                }
                @if (@Model.DateOfBirth != null)
                {
                    <li>Date of Birth<div class="text-success pull-right">@string.Format("{0:dd-MM-yyyy}", Model.DateOfBirth.Value)</div></li>
                }

                <li>Birth Time<div class="text-success pull-right">@Model.TimeofBirth</div></li>
                <li>Birth Place<div class="text-success pull-right">@Model.PlaceofBirth</div></li>
                <li>Moonsign<div class="text-success pull-right">@Model.OrasName</div></li>
                <li>Gotra<div class="text-success pull-right">@Model.Gotra</div></li>
                <li>Birth Name<div class="text-success pull-right">@Model.BirthName</div></li>
                <li>Education <div class="text-success pull-right">@Model.Qualification</div></li>
                <li>Height<div class="text-success pull-right">@Model.Height</div></li>
                <li>Weight<div class="text-success pull-right">@Model.Weight</div></li>
                <li>Blood Group<div class="text-success pull-right">@Model.BloodGroupName</div></li>
                <li>Body Type<div class="text-success pull-right">@Model.BodyType</div></li>
                @if (Model.Color == "0")
                {
                    <li>Color<div class="text-success pull-right">--</div></li>
                }
                else
                {
                    <li>Color<div class="text-success pull-right">@Model.Color</div></li>
                }
                @if (Model.IsJobOrBusiness != null && Model.IsJobOrBusiness == true)
                {
                    <li>Job/Business<div class="text-success pull-right">नोकरी</div></li>
                }
                else if (Model.IsJobOrBusiness != null && Model.IsJobOrBusiness == false)
                {
                    <li>Job/Business<div class="text-success pull-right">व्यवसाय</div></li>
                }
                else if (Model.IsJobOrBusiness == null)
                {
                    <li>Job/Business<div class="text-success pull-right">--</div></li>
                }
                <li>Job Location<div class="text-success pull-right">@Model.JobLocation</div></li>
                <li>Job Information<div class="text-success pull-right">@Model.CompanyName</div></li>
                <li>Annual Income<div class="text-success pull-right">@Model.Income</div></li>

                <li>Mobile No<div class="text-success pull-right">@Model.MobileNo</div></li>
            </ul>
        </div>
    </div>
    <div class="col-md-4 stats-info stats-info1">
        <div class="panel-heading">
            <h4 class="panel-title">Family Information</h4>
        </div>
        <div class="panel-body panel-body2">
            <ul class="list-unstyled">
                @if (!string.IsNullOrEmpty(Model.FathersName))
                {
                    <li>Fathers Name<div class="text-success pull-right">श्री @Model.FathersName</div></li>
                }
                else
                {
                    <li>Fathers Name<div class="text-success pull-right">--</div></li>
                }
                @if (!string.IsNullOrEmpty(Model.MothersName))
                {
                    <li>Mothers Name<div class="text-success pull-right">@Model.MothersName</div></li>
                }
                else
                {
                    <li>Mothers Name<div class="text-success pull-right">--</div></li>
                }
                
                <li>Fathers Income<div class="text-success pull-right">@Model.FathersIncome</div></li>
                <li>Brother<div class="text-success pull-right">@Model.BotherInfo</div></li>
                <li>Sister<div class="text-success pull-right">@Model.SisterInfo</div></li>
                <li>Address<div class="text-success pull-right">@Model.Address</div></li>
                <li>City<div class="text-success pull-right">@Model.City</div></li>
                <li>Taluka<div class="text-success pull-right">@Model.Taluka</div></li>
                <li>District<div class="text-success pull-right">@Model.District</div></li>
                <li>Mobile No<div class="text-success pull-right">@Model.Expr2</div></li>
                <li>Expectation<div class="text-success pull-right">@Model.Expectation</div></li>
                <li>Hobbies<div class="text-success pull-right">@Model.Hobbies</div></li>
            </ul>
        </div>
    </div>



    <div class="col-md-4 stats-info stats-info1">
        <div class="panel-heading">
            <h4 class="panel-title">Relative Information</h4>
        </div>
        <div class="panel-body panel-body2">
            <input type="hidden" id="relativeinfo" value="@Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.RelativeDetails)" />
            <ul class="list-unstyled" id="divrelative"></ul>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
<div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="btnCloseModel">×</button>
                <h2 class="modal-title">Image</h2>
            </div>
            <div class="modal-body">
                <p>
                    @if (!string.IsNullOrEmpty(Model.Img1))
                    {
                        <img class="img-responsive" id="Img1" src="@Url.Content(String.Format("~/{0}", Model.Img1))" alt="" data="0">
                    }
                    else
                    {
                        if (Model.Gender == "M")
                        {
                            <img class="media-object" src="@Url.Content("~/Content/Images/User_male.png")" data-holder-rendered="true" style="width: 150px; height: 150px;">
                        }
                        else
                        {
                            <img class="media-object" src="@Url.Content("~/Content/Images/User_female.png")" data-holder-rendered="true" style="width: 150px; height: 150px;">
                        }

                    }
                </p>
            </div>
            <div class="modal-footer">
                <span class="glyphicon glyphicon-refresh" onclick="Rotate()"></span>
            </div>
        </div>
    </div>
</div>

@model ShriVivah.Models.Entities.tblReligion

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmReligion" }))
{
    @Html.AntiForgeryToken()
    <div class="span_3">
        <h4>धर्माची माहिती</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ReligionId)
        <div class="span_3">
            <span>धर्माचे नाव :</span>
            @Html.TextBoxFor(model => model.ReligionName)
            @Html.ValidationMessageFor(model => model.ReligionName)
        </div>
        <br />
        <div class="span_3">
            <input type="button" value="सेव करा" class="btn btn-default" id="btnSave" />
            <input type="button" value="बदल करा" class="btn btn-default" id="btnUpdate" />
            <input type="button" value="रद्द करा" class="btn btn-default" id="btnCancel" />
        </div>
    </div>
}

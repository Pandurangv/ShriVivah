@model ShriVivah.Models.Entities.tblState

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmState" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>State Information</h4>
        @Html.HiddenFor(m=>m.StateId)
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                <span>Country Name</span>
                @Html.DropDownList("CountryId", ViewBag.CountryId as SelectList)
                @Html.ValidationMessageFor(model => model.CountryId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <span>State Name</span>
                @Html.EditorFor(model => model.StateName)
                @Html.ValidationMessageFor(model => model.StateName)
            </div>
        </div>
        <br />
        <div class="span_3">
            <input type="button" value="Save" class="btn btn-default" id="btnSave" />
            <input type="button" value="Update" class="btn btn-default" id="btnUpdate" />
            <input type="button" value="Cancel" class="btn btn-default" id="btnCancel" />
        </div>
    </div>
}

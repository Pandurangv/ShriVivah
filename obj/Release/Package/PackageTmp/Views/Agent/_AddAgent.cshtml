@model ShriVivah.Models.Entities.STP_GetUserDetail

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmUserProfile" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(m => m.UserId)
        @Html.ValidationSummary(true)
        <div class="form-group" id="contentdiv">
            <div id="divPersonal">
                <h3>वैयक्तिक माहिती</h3>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">नाव</label>
                    <div class="col-sm-8">
                        <input type="text" id="FirstName" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">आडनाव</label>
                    <div class="col-sm-8">
                        <input type="text" id="LastName" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">ई-मेल</label>
                    <div class="col-sm-8">
                        <input type="email" id="EmailId" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">मोबाईल नंबर.</label>
                    <div class="col-sm-8">
                        <input type="tel" id="ContactNo" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">लॉग-इन नाव.</label>
                    <div class="col-sm-8">
                        <input type="text" id="UserName" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">पासवर्ड.</label>
                    <div class="col-sm-8">
                        <input type="password" id="Password" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label">पासवर्ड पुन्हा  प्रविष्ट.</label>
                    <div class="col-sm-8">
                        <input type="password" id="ConfirmPassword" required="required" class="form-control1" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">शहर/गाव</label>
                    <div class="col-sm-8">
                        <input type="text" id="City" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">तालुका</label>
                    <div class="col-sm-8">
                        <input type="text" id="Taluka" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">जिल्हा</label>
                    <div class="col-sm-8">
                        <input type="text" id="District" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">राज्य</label>
                    <div class="col-sm-8">
                        <input type="text" id="State" required="required" class="form-control1" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">पत्ता</label>
                    <div class="col-sm-8">
                        <input type="text" id="Address" required="required" class="form-control1" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="span_3">
                <input type="button" value="सेव करा" class="btn btn-default" id="btnSave" />
                <input type="button" value="बदल करा" class="btn btn-default" id="btnUpdate" />
                <input type="button" value="रद्द करा" class="btn btn-default" id="btnCancel" />
            </div>
        </div>
    </div>
}
